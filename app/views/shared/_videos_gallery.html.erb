<% watchable.video_links.each do |video| %>
  <div class="col-sm-4">
    <div class="vids_index">
      <a href="#" class="vids"  data-toggle="modal" data-target="#<%= video.yt_id %>" data-turbolinks="false">
        <span><font style="background-color: white;"><i class="icon-play"></i></font></span>
        <%= image_tag video.yt_thumbnail %>
      </a>
    </div>

    <div id="<%= video.yt_id %>" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
          <%= youtube_embed(video, "width: 100%; height:40rem;") %>
        </div>
      </div>
    </div>
  </div>
<% end %>
