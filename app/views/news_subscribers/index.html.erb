<p id="notice"><%= notice %></p>

<h1>News Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Crew</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_subscribers.each do |news_subscriber| %>
      <tr>
        <td><%= news_subscriber.email %></td>
        <td><%= news_subscriber.crew %></td>
        <td><%= link_to 'Show', news_subscriber %></td>
        <td><%= link_to 'Edit', edit_news_subscriber_path(news_subscriber) %></td>
        <td><%= link_to 'Destroy', news_subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News Subscriber', new_news_subscriber_path %>
