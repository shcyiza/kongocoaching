<%= simple_form_for(@training_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :description %>
    <%= f.input :duration_hours %>
    <%= f.input :duration_minutes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
