<div class="container">
  <%= simple_form_for(@training_type, html: { multipart: true }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :duration_hours %>
      <%= f.input :duration_minutes %>
      <%= render 'shared/nest_avatar_form' %>
      <%= render 'shared/nest_videolink_form' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
