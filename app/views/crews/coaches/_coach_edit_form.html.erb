<h1>Editer ce coach</h1>
<%= simple_form_for(coach, url: "/crews/#{@crew.id}/edit_cc/#{coach.id}", method: :post, html: { multipart: true }) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-7">
      <div class="form-inputs">
        <%= f.input :name, label:"Son nom" %>
        <%= f.input :description, input_html: {style: "min-height: 125px;"} %>
      </div>
    </div>
    <div class="col-md-5">
      <%= f.label :training_type_ids, "CV (Quelles services/entrainements donne-t-il?)" %>
      <%= f.collection_select :training_type_ids, TrainingType.order(:name), :id, :name, {}, {multiple: true, class: "chosen-select"} %>
    </div>
  </div>
  <hr>
  <hr>
  <%= button_tag class: 'btn_full', type: :submit do %>
   <font size="50px">Editer ce Coach</font>
  <% end %>
<% end %>
