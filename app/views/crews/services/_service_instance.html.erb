<section class="card">
  <header style="">
    <% if has_photos_of service %>
    <!-- has_photos is a application helper method -->
      <%= image_tag service.photo.url %>
    <% else %>
      <img src="https://source.unsplash.com/ZKNsVqbRSPE/1000x400" />
    <% end %>

    <div class="text-wrap">
      <h2><strong><%= service.name %></strong></h2>
      <a href="#0" class="btn_1 white shadowed" data-toggle="modal" data-target="#edit_service<%= service.id %>">
        <i class="icon-edit-2"></i> editer...
      </a><br><br><br><br><br><br>
      <a href="#0" class="btn_1_outline shadowed pull-down" data-toggle="modal"
      style="border-color: red; color: red;" data-target="#delete_service<%= service.id %>">
        <i class="icon-trash"></i>...
      </a>
    </div>
  </header>
  <main>
    <div href="#" class="cta-wrap">
      <i class="icon-stopwatch"></i>
      <span>Dur√©e:</span>
      <span><%= service.duration_hours %>h <%= service.duration_minutes %>m</span>
      <hr>
      <%= render './shared/add_avatar_btn', { attachable_type: service.class.name, attachable: service } %>
      <br>
      <%= render './shared/add_video_btn', { watchable_type: service.class.name, watchable_id: service.id } %>
    </div>
    <div class="info-wrap">
      <div class="panel-group" id="accordion_<%= service.id %>">
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
                  <a class="accordion_<%= service.id %>-toggle" data-toggle="collapse" data-parent="#accordion_<%= service.id %>" href="#description_<%= service.id %>">
                    <strong>Description</strong> <i class="icon-th-list"></i>
                    <i class="indicator icon_minus_alt2 pull-right"></i>
                  </a>
                </h4>
							</div>
							<div id="description_<%= service.id %>" class="panel-collapse collapse in">
								<div class="panel-body scrollable">
                  <%= service.description %>
								</div>
							</div>
						</div>
            <% if has_photos_of service %>
  						<div class="panel panel-default">
  							<div class="panel-heading">
  								<h4 class="panel-title">
                    <a class="accordion_<%= service.id %>-toggle" data-toggle="collapse" data-parent="#accordion_<%= service.id %>" href="#pictures_<%= service.id %>">
                      <strong>Photos</strong> <i class="icon-picture"></i>
                      <i class="indicator icon_plus_alt2 pull-right"></i>
                    </a>
                  </h4>
  							</div>
  							<div id="pictures_<%= service.id %>" class="panel-collapse collapse">
                  <div class="panel-body scrollable">
                    <%= render './shared/pictures_gallery', attachable: service  %>
                  </div>
  							</div>
  						</div>
            <% end %>
            <% if has_vidoes_of service %>
  						<div class="panel panel-default">
  							<div class="panel-heading">
  								<h4 class="panel-title">
                    <a class="accordion_<%= service.id %>-toggle" data-toggle="collapse" data-parent="#accordion_<%= service.id %>" href="#videos_<%= service.id %>">
                      <strong>Videos</strong> <i class="icon-video"></i>
                      <i class="indicator icon_plus_alt2 pull-right"></i>
                    </a>
                  </h4>
  							</div>
  							<div id="videos_<%= service.id %>" class="panel-collapse collapse">
  								<div class="panel-body scrollable">
                    <%= render './shared/videos_gallery', watchable: service  %>
  								</div>
  							</div>
  						</div>
            <% end %>
					</div>
    </div>
  </main>
</section>
<!--edit service modal-->
<div class="modal fade bs-example-modal-lg" id="edit_service<%= service.id %>" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true">
  <div class="modal-dialog modal-lg"  role="document">
    <div class="modal-content modal-popup">
      <%= render './training_types/form', training_type: service %>
    </div>
  </div>
</div><!--end edit modal-->

<!--destroy service modal-->
<div class="modal fade bs-example-modal-lg" id="delete_service<%= service.id %>" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true">
  <div class="modal-dialog modal-lg"  role="document">
    <div class="modal-content modal-popup">
      <h1>Etes vous sur de vouloir supprimez ce service/entrainement?</h1> <br>
      <div class="text-wrap">
        <h2><strong><%= service.name %></strong></h2>
      </div>
      <%= image_tag service.photo.url(:thumb) %>
      <hr>
      <%= link_to "/crews/#{@crew.id}/destroy_service/#{service.id}", class:"btn_1 white", method: 'post' do %>
        <i class="icon-trash"></i> Oui
      <% end %>
      <a href="#" class="btn_1" onclick="$('#delete_service<%= service.id %>').modal('hide');" data-turbolinks="false">
        <i class="icon-check"></i> non
      </a>
    </div>
  </div>
</div><!--end destroy modal-->
