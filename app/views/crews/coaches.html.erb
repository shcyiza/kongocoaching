<section class="hero">
  <%= image_tag "http://www.tennisworld.net.au/wp-content/uploads/2014/07/bootcamp3-724x426.jpg", class: "hero__background" %>
	<div class="container">
		<h2 class="main_title  hero__title" style="color:green; width:100%;">
      Vos Coaches
    </h2>
  </div>
</section>
<hr class="invisible">
<a href="#0" data-toggle="modal" data-target="#addcoach" class="btn_1 white"><i class="icon-plus"></i>Ajouter un coach</a>
<div class="row admin_content">
  <% @coaches.each do |coach| %>
    <%= render 'crews/coaches/coach_instance', coach: coach %>
  <% end %>
</div>

<div class="modal fade bs-example-modal-lg" id="addcoach" tabindex="-1" role="dialog" aria-labelledby="myLogin" aria-hidden="true">
  <div class="modal-dialog modal-lg"  role="document">
    <div class="modal-content modal-popup">
      <%= render 'crews/coaches/form_cc' %>
    </div>
  </div>
</div>
<%= javascript_include_tag 'resources/scaffold', 'data-turbolinks-track' => 'reload' %>
<script type="text/javascript">
  $('input[data-for="img-upld"]').each( function(index) {
    $(this).change( function() {
      let prev_el = $(this).parent().find('img');
      triggerPrevieuw( this, prev_el );
    });
  });
</script>
