<%= simple_form_for(@profile, url: {action: "add_motivation", controller: 'kickstarts'}, method: 'post') do |f| %>
  <div class="form-inputs">
    <%= f.input :motivation %>
  </div>

<div class="row">
  <div class="col-md-6">
    <%= link_to "Je le ferais avec mon coach...", '/after_kickstart_creation', method: :post %>
  </div>
  <div class="form-actions col-md-6">
    <%= button_tag class: 'btn_full', type: :submit do %>
     Envoyer!
    <% end %>
  </div>
</div>
<% end %>
