<p id="notice"><%= notice %></p>

<h1>Profile Variables</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Name</th>
      <th>Variable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_variables.each do |profile_variable| %>
      <tr>
        <td><%= profile_variable.profile %></td>
        <td><%= profile_variable.name %></td>
        <td><%= profile_variable.variable %></td>
        <td><%= link_to 'Show', profile_variable %></td>
        <td><%= link_to 'Edit', edit_profile_variable_path(profile_variable) %></td>
        <td><%= link_to 'Destroy', profile_variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

